<div class="col-md-10">
  <h3><%= t(:shift_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_shift), new_shift_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <%#= render 'search' %>
</div>
<div class="col-md-12">
  <hr />
  <table class="table">
    <thead>
      <tr>
        <% Shift::HEADERS.each do |column| %>
          <th><%= Shift.human_attribute_name(column) %></th>
        <% end %>
        <th colspan="2"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @shifts %>
    </tbody>
  </table>
</div>