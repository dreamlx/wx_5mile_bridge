<div class="col-md-10">
  <h3><%= t(:advice_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_advice), new_advice_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <%= render 'search' %>
</div>
<div class="col-md-12">
  <hr />
  <table class="table">
    <thead>
      <tr>
        <% Advice::HEADERS.each do |column| %>
          <th><%= Advice.human_attribute_name(column) %></th>
        <% end %>
        <th colspan="4"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @advices %>
    </tbody>
  </table>
</div>