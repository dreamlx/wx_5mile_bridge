<div class="col-md-10">
  <h3><%= t(:hospital_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_hospital), new_hospital_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <hr />
  <table class="table">
    <thead>
      <tr>
        <% Hospital::HEADERS.each do |column| %>
          <th><%= Hospital.human_attribute_name(column) %></th>
        <% end %>
        <th colspan="3"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @hospitals %>
    </tbody>
  </table>
</div>